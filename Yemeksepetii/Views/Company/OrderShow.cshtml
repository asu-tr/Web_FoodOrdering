
@{
    ViewBag.Title = "Sipariş Görüntüle";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="col-md-12">
    <div class="block">
        <div class="block-content-outer">
            <div class="block-content-inner">
                <div class="table-responsive">
                    <span> yeşil tamamlnadı kırmızı iptal mavi yolda sarı hazırlanıyor</span>
                    <table id="datatable-1" class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Sipariş ID</th>
                                <th>Sipariş Zamanı</th>
                                <th>Sipariş Durumu</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                           @foreach (var order in ViewBag.Orders)
                            {
                            <tr>
                                <td>@order.OrderID</td>
                                <td>@order.OrderTime</td>
                               @if (order.OrderStatusID == 1)
                                {
                                    <td class="bg-color-yellow">Hazırlanıyor</td>
                                }

                               @if (order.OrderStatusID == 2)
                                {
                                    <td class="bg-color-blue">Yolda</td>
                                }

                               @if (order.OrderStatusID == 3)
                                {
                                    <td class="bg-color-green">Tamamlandı</td>
                                }

                               @if (order.OrderStatusID == 4)
                                {
                                    <td class="bg-color-red">İptal Edildi</td>
                                }

                                <td>
                                    edit
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

