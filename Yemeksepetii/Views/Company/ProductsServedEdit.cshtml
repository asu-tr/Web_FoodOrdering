@model Yemeksepetii.Models.ServedProducts

@{
    ViewBag.Title = "Satıştaki Ürünü Güncelle";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}


@using (Html.BeginForm("ProductsServedEdit", "Company", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    <h2>@ViewBag.ProductName</h2>

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <label class="control-label col-md-2">Fiyat:</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Açıklama:</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Descriptionn, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Descriptionn, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <input type="hidden" value="@ViewBag.SellerID" name="SellerID" />
    </div>

    <div class="form-group">
        <input type="hidden" value="@ViewBag.ServeID" name="ServeID" />
    </div>

    <div class="form-group">
        <input type="hidden" value="@ViewBag.ProductID" name="ProductID" />
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Kaydet" class="btn btn-default" />
        </div>
    </div>
</div>
}
