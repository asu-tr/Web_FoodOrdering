@model Yemeksepetii.App_Classes.SBRel

@{
    ViewBag.Title = "Konum Bilgisi Güncelle";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}


@using (Html.BeginForm("SellerBuyerRelEdit", "Company", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <h2>@ViewBag.District İlçesi</h2>

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2">Minimum Sipariş Tutarı:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MOA, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MOA, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Tahmini Varış Süresi:</label>
            <div class="col-md-10">
                <select name="ArrivalTimeID">
                    @foreach (var time in ViewBag.Times)
                    {
                        <option value="@time.ArrivalTimesID">@time.ArrivalTimeText</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group" hidden>
            <input type="hidden" value="@Model.SellerID" name="SellerID" />
        </div>

        <div class="form-group" hidden>
            <input type="hidden" value="@Model.OrdererLocationID" name="OrdererLocationID" id="OrdererLocationID" />
        </div>

        <div class="form-group" hidden>
            <input type="hidden" value="@Model.OrdererDistrict" name="OrdererDistrict" />
        </div>

        <div class="form-group" hidden>
            <input type="hidden" value="" name="ArrivalText" id="ArrivalText" />
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-default" />
            </div>
        </div>
    </div>
}


@section scripts
    {
    <script src="~/Content/assets/js/required/jquery-1.11.1.min.js" type="text/javascript"></script>

    <script type="text/javascript">

        $('#ordererLocationID').change( function () {
            var dName = $(this).find("option:selected").text();
            $('#ArrivalText').val(dName);
        });

    </script>
}