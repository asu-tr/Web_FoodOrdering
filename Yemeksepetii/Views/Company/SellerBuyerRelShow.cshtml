@{
    ViewBag.Title = "Konum Bilgileri";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

@using Yemeksepetii.Models
@using Yemeksepetii.App_Classes
@model IEnumerable<SBRel>


<div class="col-md-12">
    <div class="block">
        <div class="block-heading">
            <div class="block-controls">
                <span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span>
                <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
            </div>
        </div>
        <div class="block-content-outer">
            <div class="block-content-inner">
                <div class="table-responsive">

                    <table id="datatable-1" class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>İlçe Adı</th>
                                <th>Minimum Sipariş Tutarı</th>
                                <th>Tahmini Varış Süresi (dk)</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (SBRel rel in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => rel.OrdererDistrict)</td>
                                    <td>@Html.DisplayFor(modelItem => rel.MOA)</td>
                                    <td>@Html.DisplayFor(modelItem => rel.ArrivalText)</td>
                                    <td>
                                        @Html.ActionLink("Düzenle", "/SellerBuyerRelEdit", new { SellerID = rel.SellerID, OLID = rel.OrdererLocationID, @class = "btn btn-danger" }) |
                                        <a href="#" class="btn btn-danger relDelete" data-olocid="@rel.OrdererLocationID" data-sellerid="@ViewBag.SellerID">Sil</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script>
        $(".relDelete").click(function () {
            var result = confirm("Kayıt Silinsin Mi?");
            if (result) {
                var SellerID = $(this).data("sellerid");
                var OLID = $(this).data("olocid");
                
                $.ajax({
                    type: "POST",
                    url: "/Company/SellerBuyerRelDelete",
                    data: {SellerID: SellerID, OLID: OLID},
                    success: function () {
                        alert("Kayıt Silindi");
                        window.location.replace("/Company/SellerBuyerRelShow");
                    },
                    error: function () {
                        alert("Kayıt silme esnasında bir hata oluştu.");
                    }
                });

            }
            else {

            }
        })
    </script>
}